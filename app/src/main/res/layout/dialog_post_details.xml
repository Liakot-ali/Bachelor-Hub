<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_details_id"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!-- Images -->
        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/shape_edit_text_border" />

            <ImageButton
                android:id="@+id/post_favorite"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_button_favorite"
                android:layout_gravity="right"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="1/5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!-- Address -->

        <!-- Rent Price -->

        <!-- Owner Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Title: "
                android:textSize="@dimen/headline_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Title"
                android:textSize="@dimen/headline_text"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Posted Date -->
        <TextView
            android:id="@+id/post_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_round_right"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Tk 15,000 /month"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_details_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details_for_rent_by"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/post_details_date"
            android:text="@string/details_posted_at"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ================================== -->
        <View
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!-- ================================== -->

        <!-- Property Type -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/details_property_type"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/post_details_property"
                android:textColor="@color/gray"
                android:text="Rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Renter Type -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/details_renter_type"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/post_details_renter"
                android:textColor="@color/gray"
                android:text="Family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Bedrooms -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/details_bedrooms"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/post_details_beds"
                android:textColor="@color/gray"
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Bathrooms -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/details_bathrooms"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/post_details_baths"
                android:textColor="@color/gray"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Available From: "
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/details_available_date"
                android:textColor="@color/gray"
                android:text="15 aug 2022"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Square Footage -->
<!--        <LinearLayout-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content">-->
<!--            <TextView-->
<!--                android:text="@string/details_square_footage"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginRight="5dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->
<!--            <TextView-->
<!--                android:id="@+id/post_details_size"-->
<!--                android:textColor="@color/gray"-->
<!--                android:text="1200 (sq. ft)"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->
<!--        </LinearLayout>-->

        <!-- ================================== -->
        <View
            android:layout_marginTop="@dimen/lay_pad"
            android:layout_marginBottom="@dimen/lay_pad"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!-- ================================== -->

        <!-- Amenities -->

        <TextView
            android:text="@string/details_amenities"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/post_details_amenities"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <TextView
            android:text="@string/details_description"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/post_details_desc"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Google Maps Selection -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/details_location"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_details_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka Cantonment"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/show_maps"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_maps_google"
                android:text="Show on Google Maps"
                android:padding="15dp"
                android:background="@drawable/shape_button_border"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Call and Email Button -->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="@dimen/inner_pad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <Button
                    android:id="@+id/post_details_call"
                    android:text="@string/details_call"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text"
                    android:background="@drawable/shape_rectangle_corner_round_black"
                    android:layout_width="match_parent"
                    android:layout_height="48sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="@dimen/inner_pad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <Button
                    android:id="@+id/post_details_email"
                    android:text="@string/details_e_mail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_text"
                    android:background="@drawable/shape_rectangle_corner_round_black"
                    android:layout_width="match_parent"
                    android:layout_height="48sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Interest -->
        <Button
            android:id="@+id/post_details_interested"
            android:text="@string/post_details_interest"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            android:background="@drawable/shape_rectangle_corner_round_black"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="48sp" />

        <!-- Reviews|Feedback -->
        <TextView
            android:text="@string/details_reviews"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:theme="@style/Theme.AppCompat.Light"
            android:id="@+id/post_feedback_list"
            android:visibility="gone"
            android:nestedScrollingEnabled="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </ListView>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/post_details_feedback"
                android:gravity="top"
                android:hint="@string/details_feedback"
                android:inputType="textCapSentences|textAutoCorrect|text|textMultiLine"
                android:background="@drawable/shape_edit_text_border"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <Button
                android:id="@+id/post_feedback_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/selector_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/details_feedback"
                android:textColor="@color/gray" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>