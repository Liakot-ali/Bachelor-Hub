<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".Activity.SettingsActivity">

    <TextView
        android:textColor="@color/black"
        android:text="@string/settings_language_change"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bangla_btn"
        android:text="@string/settings_bangla"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_button_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/english_btn"
        android:text="@string/settings_english"
        android:textColor="@color/white"
        android:background="@drawable/selector_button_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>