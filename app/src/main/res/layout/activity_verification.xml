<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.VerificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lay_pad"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/inner_pad"
                    android:text="To verify your profile, send \u09F3300 to the given number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/verifySendMoneyNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/inner_pad"
                        android:text="01234567890"
                        android:textColor="@color/orange"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/headline_text"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/verifyCopyNumber"
                        android:layout_width="@dimen/medium_icon"
                        android:layout_height="@dimen/medium_icon"
                        android:layout_marginLeft="@dimen/lay_pad"
                        android:background="@drawable/button_ripple_effect"
                        android:padding="@dimen/inner_pad"
                        app:srcCompat="@drawable/ic_copy_24" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="After completing transaction, write your Transaction ID below"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:id="@+id/verifyTransId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_edit_text_border"
                    android:hint="Write Transaction ID here"
                    android:minHeight="48sp"
                    android:padding="@dimen/inner_pad"
                    android:textSize="@dimen/normal_text" />
                <TextView
                    android:id="@+id/verifyTransIdHelper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/small_text"
                    android:text="*"/>

                <!--            <com.google.android.material.textfield.TextInputLayout-->
                <!--                android:id="@+id/verifyTransIdLay"-->
                <!--                style="@style/TextInputLayoutStyle"-->
                <!--                app:helperText="*required"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                app:counterMaxLength="30">-->

                <!--                <com.google.android.material.textfield.TextInputEditText-->
                <!--                    android:id="@+id/verifyTransId"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:hint="Transaction ID"-->
                <!--                    android:inputType="text"-->
                <!--                    android:textSize="@dimen/normal_text" />-->
                <!--            </com.google.android.material.textfield.TextInputLayout>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/lay_pad"
                android:layout_marginBottom="@dimen/lay_pad"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NID front side"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_pad"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/verifyNIDFrontPic"
                    android:layout_width="240sp"
                    android:layout_height="160sp"
                    android:background="@drawable/shape_edit_text_border"
                    android:contentDescription="NID front side picture"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/verifyTakeNidFrontPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Camera" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NID back side"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_pad"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/verifyNIDBackPic"
                    android:layout_width="240sp"
                    android:layout_height="160sp"
                    android:background="@drawable/shape_edit_text_border"
                    android:contentDescription="NID front side picture"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/verifyTakeNidBackPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Camera" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your picture"
                android:textColor="@color/orange"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_pad"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/verifyUserPic"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:background="@drawable/shape_edit_text_border"
                    android:contentDescription="NID front side picture"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/verifyTakeUserPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/lay_pad"
                        android:text="Camera" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/verifyVerifyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lay_pad"
                android:layout_marginBottom="25sp"
                android:text="Verify"
                android:textSize="@dimen/normal_text"
                android:textColor="@color/white"/>

